<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/washer_dpxs"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/dp_dark"/>

    <Button
        android:id="@+id/btn_open_washer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/appliance_press"
        android:layout_marginTop="30dp"
        android:text="打开洗衣机"/>

    <Button
        android:id="@+id/btn_close_washer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/appliance_press"
        android:text="关闭洗衣机" />



    <Button
        android:id="@+id/time_select_washer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/appliance_press"
        android:text="定时开启"/>

    <TextView
        android:id="@+id/txt_time_washer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>