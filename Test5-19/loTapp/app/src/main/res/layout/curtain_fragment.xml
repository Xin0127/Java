<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/curtain_dpxs"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/dp_dark"/>

    <Button
        android:id="@+id/btn_open_curtain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/wind_press"
        android:text="打开窗帘"/>

    <Button
        android:id="@+id/btn_close_curtain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/wind_press"
        android:text="关闭窗帘" />


    <Button
        android:id="@+id/time_select_opencurtain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/wind_press"
        android:text="定时打开"/>


    <Button
        android:id="@+id/time_select_closecurtain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/wind_press"
        android:text="定时关闭"/>


    <TextView
        android:id="@+id/txt_time_open_curtain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_time_close_curtain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
