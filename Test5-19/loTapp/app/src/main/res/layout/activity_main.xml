<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/dpxs"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:src="@drawable/dp_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/setip_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:src="@drawable/setip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="易家智能家居"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/top_banner"
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:layout_marginTop="61dp"
        android:paddingRight="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <Button
            android:id="@+id/light_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/light"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:text="照明"
            android:textColor="#D3FFFFFF"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/appliance_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/appliance3"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="家电"
            android:textColor="#D3FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sec_banner"
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="61dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="60dp"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <Button
            android:id="@+id/anfang_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/security"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="安防"
            android:textColor="#D3FFFFFF"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/wind_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wind2"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="通风采光"
            android:textColor="#D3FFFFFF"
            android:textSize="20sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>