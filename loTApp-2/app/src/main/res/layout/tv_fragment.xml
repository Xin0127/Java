<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/tv_dpxs"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/dp_dark"/>

    <Button
        android:id="@+id/btn_open_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4100FFEA"
        android:layout_marginTop="30dp"
        android:text="打开电视"/>

    <Button
        android:id="@+id/btn_close_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#4100FFEA"
        android:text="关闭电视" />



    <Button
        android:id="@+id/time_select_opentv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#4100FFEA"
        android:text="定时开启"/>

    <Button
        android:id="@+id/time_select_closetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#4100FFEA"
        android:text="定时关闭"/>

    <TextView
        android:id="@+id/txt_time_opentv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_time_closetv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>