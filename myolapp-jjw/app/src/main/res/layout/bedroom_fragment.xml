<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/bedroom_dpxs"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/dp_dark"/>

    <Button
        android:id="@+id/btn_open_bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#C48888"
        android:text="开灯"/>

    <Button
        android:id="@+id/btn_close_bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#C48888"
        android:text="关灯" />



    <Button
        android:id="@+id/time_select_bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#C48888"
        android:text="定时"/>

    <TextView
        android:id="@+id/txt_time_bedroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
