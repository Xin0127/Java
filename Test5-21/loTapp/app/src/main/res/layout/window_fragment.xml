<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/window_dpxs"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/dp_dark"/>

    <Button
        android:id="@+id/btn_open_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/wind_press"
        android:text="开窗"/>

    <Button
        android:id="@+id/btn_close_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/wind_press"
        android:text="关窗" />



    <Button
        android:id="@+id/time_select_openwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/wind_press"
        android:text="定时开窗"/>

    <Button
        android:id="@+id/time_select_closewindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/wind_press"
        android:text="定时关窗"/>

    <TextView
        android:id="@+id/txt_time_open_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_time_close_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
